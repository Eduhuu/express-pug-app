extends ../layout/mainLayoutProfile.pug

block content
  div(class="h-full w-full flex justify-center items-center")
    div(class="p-8 flex flex-col min-w-[20%] max-w-[25%] border border-1 border-[#D9D9D9] rounded shadow bg-[#D9D9D9] gap-4")
      div(class="flex justify-between")   
          div(class="flex gap-4")
              a(href="/profile")
                  i(class="fa fa-chevron-left" aria-hidden="true")
              h1 Perfil
      form(action="/confirm-password" method="post" class="flex flex-col gap-2")
        div(class="flex flex-col gap-2")
          label Nueva contrasena
          input(class="px-3 py-2 border border-1 border-gray-500 rounded" type="password" name="password" placeholder="Nueva Contraseña")
        div(class="flex flex-col gap-2")  
          label Confirmar contrasena
          input(class="px-3 py-2 border border-1 border-gray-500 rounded" type="password" name="confirm_password" placeholder="Confirmar nueva contraseña")
        div(class="col-span-2")
          button(class="w-full px-4 py-2 border border-1 border-black rounded" type="submit") Cambiar