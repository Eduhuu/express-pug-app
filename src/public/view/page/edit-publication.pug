extends ../layout/mainLayoutProfile.pug

block content 
    form(class="h-full w-full flex justify-center items-center" action=form_action method="post" enctype="multipart/form-data")
        div(class="p-8 flex flex-col w-[35%] border border-1 border-[#D9D9D9] rounded shadow bg-[#D9D9D9] gap-4")
            div(class="flex justify-between")   
                div(class="flex gap-4")
                    a(href=`/publication/${publication_id}/`)
                        i(class="fa fa-chevron-left" aria-hidden="true")
                    h1 Volver
            div(class="flex flex-col self-center items-center gap-2")
                //- img(class="w-full" src="img/img-default.jpg")
                input(type="file" id="publication-input" name="publication-input" accept="image/*" class="border rounded-md p-2 bg-white hidden")
                img(id="publication-register-img" class="cursor-pointer rounded" src=`/${publication.image}`)
            div(class="flex flex-col gap-2") 
                label(for="") Titulo
                input(class="w-full px-3 py-2 border border-1 border-gray-300 rounded" value=publication.title type="text", name="title", placeholder="Titulo") 
            div(class="flex flex-col gap-2") 
                label(for="") Contenido de publicacion
                textarea(class="w-full px-3 py-2 border border-1 border-gray-300 rounded" type="text", name="content")=publication.content
            button(class="flex self-end px-4 py-2 border border-1 border-black rounded") Guardar
